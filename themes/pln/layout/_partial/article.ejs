<% if(index){ %>
<div>
<li class="post-item">
  <%- partial('post/title') %>
  <div class="excerpt">
  <% if (item.excerpt){ %>
    <%- item.excerpt %>
  <% } else { %>
    <%- truncate(strip_html(item.content.replace(/<div class="line">\d*<\/div>/g, '')).replace(/^\s*/, '').replace(/\s*$/, ''), { length: theme.excerpt_num}) %>
  <% } %>
  <a href="<%- config.root %><%- item.path %>">
    <%= __("read_more") %>
  </a>
  </div>
  <div class="index-meta">
    <%- partial('post/meta', {item: item}) %>
  </div>
</li>
</div>
<hr>
<% } else { %>

  <article class="standard <%= item.layout %>">
    <div class="title">
      <%- partial('post/title') %>
    </div>
    <div class="meta center">
      <%- partial('post/meta', {item: item}) %>
    </div>
    <hr>
    <div class="picture-container">
      <% if (item.photos && item.photos.length){ %>
        <%- partial('post/gallery', {item: item}) %>
      <% } %>
    </div>
    <%- item.content %>

  </article>
<% } %>
<%- partial('post/comment') %>
